{
  "name": "text",
  "version": "1.0.0",
  "desc": "文本",
  "img": "/assets/img/text.jpg",
  "config": {
    "text": {
      "name": "文本内容",
      "type": "Input",
      "defaultValue": "我是标题"
    },
    "fontSize": {
      "name": "字号",
      "type": "Number",
      "defaultValue": 24
    },
    "color": {
      "name": "颜色",
      "type": "Color",
      "defaultValue": "#fff"
    },
    "fontWeight": {
      "name": "字体粗细",
      "type": "Select",
      "options": [
        {
          "label": "Normal",
          "value": "normal"
        },
        {
          "label": "Bold",
          "value": "bold"
        },
        {
          "label": "Bolder",
          "value": "bolder"
        },
        {
          "label": "Lighter",
          "value": "lighter"
        },
        {
          "label": "100",
          "value": "100"
        },
        {
          "label": "200",
          "value": "200"
        },
        {
          "label": "300",
          "value": "300"
        },
        {
          "label": "400",
          "value": "400"
        },
        {
          "label": "500",
          "value": "500"
        },
        {
          "label": "600",
          "value": "600"
        },
        {
          "label": "700",
          "value": "700"
        },
        {
          "label": "800",
          "value": "800"
        },
        {
          "label": "900",
          "value": "900"
        }
      ],
      "defaultValue": "normal"
    },
    "textAlign": {
      "name": "对齐方式",
      "type": "Group",
      "children": {
        "horizontal": {
          "name": "水平",
          "type": "Select",
          "options": [
            {
              "label": "左对齐",
              "value": "left"
            },
            {
              "label": "右对齐",
              "value": "right"
            },
            {
              "label": "居中对齐",
              "value": "center"
            }
          ],
          "defaultValue": "center"
        },
        "vertical": {
          "name": "垂直",
          "type": "Select",
          "options": [
            {
              "label": "顶部对齐",
              "value": "top"
            },
            {
              "label": "底部对齐",
              "value": "bottom"
            },
            {
              "label": "居中对齐",
              "value": "center"
            }
          ],
          "defaultValue": "center"
        }
      }
    },
    "textDirection": {
      "name": "文字排列方式",
      "type": "Select",
      "options": [
        {
          "label": "水平",
          "value": "horizontal-tb"
        },
        {
          "label": "垂直",
          "value": "vertical-rl"
        }
      ],
      "defaultValue": "horizontal-tb"
    },
    "letterSpacing": {
      "name": "文字间隔",
      "type": "Number",
      "unit": "px"
    },
    "bg": {
      "name": "背景样式",
      "type": "Group",
      "children": {
        "bgColor": {
          "name": "背景色",
          "type": "Color"
        },
        "borderRadius": {
          "name": "圆角",
          "type": "Number"
        },
        "border": {
          "name": "边框",
          "type": "Input"
        }
      }
    },
    "ellipsis": {
      "name": "省略号",
      "type": "Switch"
    },
    "hyperLink": {
      "name": "超链接配置",
      "type": "Group",
      "children": {
        "link": {
          "name": "超链接",
          "type": "Input"
        },
        "newWindow": {
          "name": "是否新开窗口",
          "type": "Switch",
          "defaultValue": true
        }
      }
    },
    "boxShadow": {
      "name": "文字阴影",
      "type": "Input"
    }
  }
}
